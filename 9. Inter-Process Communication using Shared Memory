#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>
#include <unistd.h>

int main() {
    key_t key = 1234;
    int shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    if (shmid == -1) {
        perror("shmget failed");
        return 1;
    }

    char *str = (char*) shmat(shmid, NULL, 0);
    if (str == (char*) -1) {
        perror("shmat failed");
        return 1;
    }

    printf("Write data to shared memory: ");
    fgets(str, 1024, stdin);

    printf("Data written to shared memory: %s", str);

    shmdt(str);
    // To destroy shared memory uncomment below line after testing
    // shmctl(shmid, IPC_RMID, NULL);

    return 0;
}
