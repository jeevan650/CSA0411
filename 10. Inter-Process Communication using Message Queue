#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>
#include <string.h>

struct msg_buffer {
    long msg_type;
    char msg_text[100];
} message;

int main() {
    key_t key;
    int msgid;

    key = ftok("progfile", 65);

    msgid = msgget(key, 0666 | IPC_CREAT);
    message.msg_type = 1;

    printf("Write message to send: ");
    fgets(message.msg_text, sizeof(message.msg_text), stdin);

    msgsnd(msgid, &message, sizeof(message), 0);

    printf("Message sent: %s", message.msg_text);

    // To destroy message queue after testing uncomment:
    // msgctl(msgid, IPC_RMID, NULL);

    return 0;
}
